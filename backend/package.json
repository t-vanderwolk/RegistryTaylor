{
  "name": "tm-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Taylor-Made Baby Co. API server",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon --watch src src/server.js",
    "start": "NODE_ENV=production node src/server.js",
    "migrate": "knex migrate:latest",
    "seed": "knex seed:run",
    "test": "NODE_ENV=test jest --runInBand"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "@aws-sdk/client-ses": "^3.609.0",
    "nodemailer": "^6.9.13",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": ["**/?(*.)+(spec|test).[jt]s"]
  }
}
