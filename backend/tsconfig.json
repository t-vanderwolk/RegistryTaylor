{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node"],
    "noEmitOnError": false
  },
  "include": ["src/**/*", "prisma/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
