{
  "name": "tm-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Taylor-Made Baby Co. API server",
  "type": "module",
  "main": "src/server.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "heroku-prebuild": "corepack enable && corepack prepare pnpm@10.18.3 --activate",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./prisma/schema.prisma",
    "migrate": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "generate": "prisma generate --schema=./prisma/schema.prisma",
    "seed": "node src/db/seed.js",
    "postinstall": "prisma generate || true",
    "lint": "eslint . --ext .js,.ts --max-warnings=0"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "axios": "^1.7.7",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.18.0"
  },
  "prisma": {
    "seed": "node src/db/seed.js"
  }
}
