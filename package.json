{
  "name": "registry-taylor",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/dashboard",
    "apps/backend",
    "packages/*"
  ],
  "scripts": {
    "repair-db": "bash scripts/repair-db.sh",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:dashboard\"",
    "dev:backend": "pnpm --filter tm-backend dev",
    "dev:dashboard": "pnpm --filter taylor-made-app dev",
    "start": "node server.js",
    "build": "pnpm run build:backend && pnpm run build:dashboard",
    "build:backend": "pnpm --filter tm-backend prisma:generate",
    "build:dashboard": "pnpm --filter taylor-made-app build",
    "lint": "pnpm --filter taylor-made-app lint",
    "migrate": "pnpm --filter tm-backend prisma:deploy",
    "seed": "pnpm --filter tm-backend seed",
    "sync:prisma": "bash scripts/sync-prisma.sh",
    "heroku-prebuild": "corepack enable && corepack prepare pnpm@10.18.3 --activate",
    "heroku-postbuild": "pnpm run build"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.922.0",
    "@aws-sdk/client-sesv2": "^3.922.0",
    "@prisma/client": "6.18.0",
    "@swc/helpers": "^0.5.17",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lucide-react": "^0.548.0",
    "morgan": "^1.10.0",
    "next": "^16.0.1",
    "nodemailer": "^7.0.10",
    "pg": "^8.11.5",
    "prisma": "6.18.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "uuid": "^9.0.1",
    "webpack": "^5.102.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": "20.x",
    "pnpm": "10.18.3"
  },
  "packageManager": "pnpm@10.18.3",
  "prisma": {
    "seed": "tsx apps/backend/prisma/seed.ts"
  }
}
